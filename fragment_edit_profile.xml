<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".profile.EditProfileFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_round_close_24"
        app:navigationIconTint="?attr/colorOnPrimary"
        app:title="Edit profile"
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Theme.Pinterest.Typography.Aleo20" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_done"
        android:layout_height="wrap_content"
        app:backgroundTint="#4A4A4A"
        android:text="@string/action_done"
        android:includeFontPadding="false"
        android:paddingVertical="5dp"
        android:paddingHorizontal="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/tv_disclaimer_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disclaimer_edit_profile"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/aleo"
        android:textSize="12sp"
        android:layout_marginStart="18dp"
        android:paddingEnd="70dp"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:shapeAppearanceOverlay="@style/ovalImageView"
        android:src="@drawable/image_avatar"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_disclaimer_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:scaleType="centerCrop" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_edit"
        android:layout_height="wrap_content"
        app:backgroundTint="#4A4A4A"
        android:text="@string/action_edit"
        android:includeFontPadding="false"
        android:paddingVertical="5dp"
        android:paddingHorizontal="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/image_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="22dp"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:textColor="#A5A5A5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anggelia"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:textColor="#A5A5A5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anggeliaa30"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:textColor="#A5A5A5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busy"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:textColor="#4A4A4A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="private account"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aleo"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnPrimary"
            app:drawableEndCompat="@drawable/ic_round_power_settings_new_24"
            app:drawableTint="#525865" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>